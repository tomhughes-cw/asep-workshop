###############################
# Core EditorConfig Options   #
###############################
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_size = 4
trim_trailing_whitespace = false
